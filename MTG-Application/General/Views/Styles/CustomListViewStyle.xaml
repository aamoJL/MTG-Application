<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--Override list item height-->
  <x:Double x:Key="ListViewItemMinHeight">25</x:Double>
  <Style x:Key="MTGListViewStyle" TargetType="ListView">
    <Setter Property="ItemContainerTransitions" Value="{x:Null}"/>
    <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
    <Setter Property="BorderThickness" Value="1 1 0 0" />
    <Setter Property="BorderBrush" Value="{ThemeResource RegionColor}" />
  </Style>
  <Style x:Key="MTGListViewItemStyle" TargetType="StackPanel">
    <Setter Property="Height" Value="25" />
    <Setter Property="Orientation" Value="Vertical" />
    <Setter Property="Spacing" Value="10" />
    <Setter Property="Background" Value="Transparent" />
  </Style>
</ResourceDictionary>