<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="MTGListViewStyle" TargetType="ListView">
    <Setter Property="ItemContainerTransitions" Value="{x:Null}"/>
    <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
    <Setter Property="BorderThickness" Value="1 1 0 0" />
    <Setter Property="BorderBrush" Value="{ThemeResource RegionColor}" />
  </Style>

  <Style x:Key="MTGListViewItemContainerStyle" TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
    <Setter Property="MinHeight" Value="25" />
  </Style>
</ResourceDictionary>