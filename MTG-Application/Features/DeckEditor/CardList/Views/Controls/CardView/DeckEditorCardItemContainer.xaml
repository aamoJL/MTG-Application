<?xml version="1.0" encoding="utf-8"?>
<!--ItemContainer can not be the root element, because the bindings do not work on
  ItemsRepeater's item template-->
<UserControl
  x:Class="MTGApplication.Features.DeckEditor.CardList.Views.Controls.CardView.DeckEditorCardItemContainer"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:MTGApplication.Features.DeckEditor.CardList.Views.Controls.CardView"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:controls="using:MTGApplication.General.Views.Controls"
  mc:Ignorable="d">

  <controls:DraggableItemContainer CanDrag="{x:Bind CanDrag, Mode=OneWay}">
    <local:AdvancedDeckEditorCardImageView
      Model="{x:Bind Model, Mode=OneWay}"
      DeleteButtonClick="{x:Bind DeleteButtonClick, Mode=OneWay}"
      CountChangeCommand="{x:Bind CountChangeCommand, Mode=OneWay}"
      ChangePrintCommand="{x:Bind ChangePrintCommand, Mode=OneWay}"
      OnDropBeginMoveFrom="{x:Bind OnDropBeginMoveFrom, Mode=OneWay}">
    </local:AdvancedDeckEditorCardImageView>
  </controls:DraggableItemContainer>
</UserControl>
