<?xml version="1.0" encoding="utf-8"?>
<controls:MTGCardChart
  x:Class="MTGApplication.Features.DeckEditor.Charts.Views.Controls.ColorDistributionChart.ManaDistributionChart"
  xmlns:controls="using:MTGApplication.Features.DeckEditor.Charts.Views.Controls"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
  mc:Ignorable="d">

  <Grid>
    <lvc:PolarChart 
      Height="250"
      Series="{x:Bind Series, Mode=OneTime}"
      AngleAxes="{x:Bind AngleAxes, Mode=OneTime}"
      RadiusAxes="{x:Bind RadiusAxes, Mode=OneTime}"/>
  </Grid>
</controls:MTGCardChart>
