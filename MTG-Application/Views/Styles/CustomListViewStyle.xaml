<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!--Override list item height-->
  <x:Double x:Key="ListViewItemMinHeight">25</x:Double>
  <Style x:Key="MTGListViewStyle" TargetType="ListView">
    <Setter Property="ItemContainerTransitions" Value="{x:Null}"/>
    <Setter Property="Background" Value="White" />
    <Setter Property="BorderBrush" Value="LightGray" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>
  <Style x:Key="MTGListViewItemStyle" TargetType="StackPanel">
    <Setter Property="Height" Value="25" />
    <Setter Property="Orientation" Value="Horizontal" />
    <Setter Property="Spacing" Value="10" />
    <Setter Property="Background" Value="Transparent" />
  </Style>
</ResourceDictionary>