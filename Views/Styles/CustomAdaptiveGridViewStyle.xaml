<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls">
  
  <Style x:Name="MTGAdaptiveGridViewStyle" TargetType="controls:AdaptiveGridView">
    <!--Min Width must be over 0, otherwise the program crashes when the view expands from 0 using GripSplitter-->
    <Setter Property="MinWidth" Value="100" />
    <Setter Property="Padding" Value="10 10 5 10" />
    <Setter Property="StretchContentForSingleRow" Value="False" />
    <Setter Property="ItemContainerTransitions" Value="{x:Null}" />
    <Setter Property="Background" Value="White" />
    <Setter Property="BorderBrush" Value="LightGray" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>
</ResourceDictionary>
